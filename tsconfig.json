{
  "extends": "cordova-plus/plugin",
  "compilerOptions": {
    "outDir": "www",
    "rootDir": "src/www",
    "outFile": "www/admob.js",
    "module": "amd",

    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "target": "es5",
    "lib": ["dom", "es2015"],
    "moduleResolution": "node"
  },

  "include": ["./src/www/cordova.d.ts", "./src/www/**/*"]
}
